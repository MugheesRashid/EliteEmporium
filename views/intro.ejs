<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop UI</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        /* Utility classes for spacing */
        .mt-custom {
            margin-top: 3rem; /* Adjust as needed */
        }
        .mb-custom {
            margin-bottom: 3rem; /* Adjust as needed */
        }
        /* Card hover effect */
        .group:hover .group-hover\:opacity-75 {
            opacity: 0.75;
        }
    </style>
</head>
<body class="bg-gray-100">
    <%- include('partials/sidebar') %>
    <!-- Hero Section -->
    <section class="relative bg-white overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:max-w-2xl lg:w-full lg:pb-28 xl:pb-32">
                <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
                    <div class="sm:text-center lg:text-left">
                        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                            <span class="block xl:inline">Discover Your New Favorites</span>
                            <span class="block text-indigo-600 xl:inline">Products WorldWide</span>
                        </h1>
                        <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">Shop the latest products trends at unbeatable prices. Explore our collection and stay ahead of the curve.</p>
                        <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                            <div class="rounded-md shadow">
                                <a href="/shop" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
            <img class="h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full" src="./images/heroimg.avif" alt="Hero Image">
        </div>
    </section>

    <!-- Product Categories -->
    <section class="bg-white">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Shop by Category</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Category Card -->
                <div class="group relative overflow-hidden bg-gray-200 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                    <img src="https://via.placeholder.com/400" alt="Category 1" class="w-full h-60 object-cover object-center">
                    <div class="absolute inset-0 bg-black opacity-0 hover:opacity-50 transition duration-300"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-lg font-semibold uppercase opacity-0 group-hover:opacity-100 transition duration-300">
                        <a href="#" class="hover:text-indigo-600">Women's Clothing</a>
                    </div>
                </div>
                <!-- Repeat for other categories -->
                <div class="group relative overflow-hidden bg-gray-200 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                    <img src="https://via.placeholder.com/400" alt="Category 2" class="w-full h-60 object-cover object-center">
                    <div class="absolute inset-0 bg-black opacity-0 hover:opacity-50 transition duration-300"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-lg font-semibold uppercase opacity-0 group-hover:opacity-100 transition duration-300">
                        <a href="#" class="hover:text-indigo-600">Men's Clothing</a>
                    </div>
                </div>
                <!-- Repeat for other categories -->
                <div class="group relative overflow-hidden bg-gray-200 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                    <img src="https://via.placeholder.com/400" alt="Category 3" class="w-full h-60 object-cover object-center">
                    <div class="absolute inset-0 bg-black opacity-0 hover:opacity-50 transition duration-300"></div>
                    <div class="absolute inset-0 flex items-center justify-center text-white text-lg font-semibold uppercase opacity-0 group-hover:opacity-100 transition duration-300">
                        <a href="#" class="hover:text-indigo-600">Accessories</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="bg-gray-100">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 mb-8">Featured Products</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Product Card -->
                 <% products.forEach((elem, idx)=> { %>
                    <div class="group relative overflow-hidden rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105 ">
                        <img src="<%= elem.img[0] %>" alt="Product 1" class="w-full h-60 object-cover object-center ">
                        <div class="absolute inset-0 bg-black opacity-0 hover:opacity-50 transition duration-300 "></div>
                        <div class="absolute inset-0 flex flex-col items-center justify-center text-lg font-semibold uppercase opacity-0 group-hover:opacity-100 transition duration-300">
                            <a href="/preview/<%= elem._id %>"class="hover:text-indigo-600"><%= elem.name %></a>
                            <p class="mt-1 text-sm"><%= elem.category %></p>
                            <% if(elem.discountedPrice){ %>
                               <p class="mt-1 text-sm font-medium inline-block"><del>$<%= elem.price %></del></p>
                               <p class="mt-1 text-xl text-orange-600  inline-block font-bold">$<%= elem.discountedPrice %></p>
                            <% }else{ %>
                                <p class="mt-1 font-medium text-xl">$<%= elem.price %></p>
                           <% } %>
                        </div>
                   </div>                
                 <% }) %>
              
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white mt-custom">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <nav class="flex flex-wrap justify-center mb-6">
                <a href="#" class="px-6 py-2 text-gray-500 hover:text-gray-900">About</a>
                <a href="#" class="px-6 py-2 text-gray-500 hover:text-gray-900">Shop</a>
                <a href="#" class="px-6 py-2 text-gray-500 hover:text-gray-900">Jobs</a>
                <a href="#" class="px-6 py-2 text-gray-500 hover:text-gray-900">Press</a>
                <a href="#" class="px-6 py-2 text-gray-500 hover:text-gray-900">Blog</a>
            </nav>
            <div class="flex justify-center space-x-6">
                <a href="#" class="text-gray-400 hover:text-gray-500">Facebook Icon</a>
                <a href="#" class="text-gray-400 hover:text-gray-500">Twitter Icon</a>
                <a href="#" class="text-gray-400 hover:text-gray-500">Instagram Icon</a>
            </div>
            <p class="mt-8 text-center text-base text-gray-400">&copy; 2024 Shop, Inc. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
